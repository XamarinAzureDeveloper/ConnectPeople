<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="UXDivers.Artina.Grial.ChatMessagesList"
	xmlns:views="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial"
	Title="{Binding Name}">
	<StackLayout
		VerticalOptions="FillAndExpand">
		<ScrollView x:Name="ScrollviewChat" Orientation = "Vertical" VerticalOptions="StartAndExpand" >
			<StackLayout
				x:Name="ChatMessagesListView"
				Padding="20" />
		</ScrollView>
		<StackLayout>
			<StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="10">
				<Button HorizontalOptions="Start"
					Style="{DynamicResource PrimaryActionButtonStyle}"
					Text="Trans" />
				<Entry x:Name="EntryWrite" HorizontalOptions="FillAndExpand"
					Placeholder="Write ..."
					Text="{Binding ContentText}" 
					/>
				<Button HorizontalOptions="End"
					Style="{DynamicResource PrimaryActionButtonStyle}"
					Text="Send"
					Command="{Binding SaveItem}" />
			</StackLayout>
		</StackLayout>
	</StackLayout>
</ContentPage>