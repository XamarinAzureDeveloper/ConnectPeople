<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="UXDivers.Artina.Grial.SignUpPage"
	xmlns:artina="clr-namespace:UXDivers.Artina.Shared;assembly=UXDivers.Artina.Shared"
	xmlns:commonViews="clr-namespace:UXDivers.Artina.Grial;assembly=UXDivers.Artina.Grial"
	BackgroundImage="{ StaticResource SignUpBackgroundImage }"
	Title="Sign Up">
	<ScrollView>

	<StackLayout>

		<StackLayout Orientation="Horizontal">
					<commonViews:BrandBlock 
					HorizontalOptions="Start"
					VerticalOptions="Center"
					/>
		</StackLayout>

		<StackLayout
					VerticalOptions="StartAndExpand" Padding="20" >
					<!---EMAIL FIELD--> 
					<Entry
						Placeholder="Name"
						Text= "{Binding Name}"
						Style="{DynamicResource ArtinaLoginEntryStyle}" />

					<Entry
						Placeholder="FirstName"
						Text= "{Binding FirstName}"
						Style="{DynamicResource ArtinaLoginEntryStyle}" />

					<Entry
						Placeholder="NickName"
						Text= "{Binding NickName}"
						Style="{DynamicResource ArtinaLoginEntryStyle}" />

					<Entry
						Placeholder="Function"
						Text= "{Binding Function}"
						Style="{DynamicResource ArtinaLoginEntryStyle}" />

					<Entry
						Placeholder="Language"
						Text= "{Binding Language}"
						Style="{DynamicResource ArtinaLoginEntryStyle}" />
					
					<Entry
						Placeholder="E-mail"
						Text= "{Binding Email}"
						Style="{DynamicResource ArtinaLoginEntryStyle}" />

					<Label
						HorizontalOptions="Start"
						Text=" Please enter a valid e-mail " IsVisible="false"
						Style="{DynamicResource ValidationEntryErrorStyle}"
						/>
					<Entry 
						Placeholder="Password"
						Text= "{Binding Password}"
						IsPassword="true"
						Style="{DynamicResource ArtinaLoginEntryStyle}"						 
						/>

				</StackLayout>
				<!-- FOOTER -->
				<StackLayout 
					HorizontalOptions="Fill"
					VerticalOptions="EndAndExpand" 
					Padding="20">

					<Button
						Style="{DynamicResource PrimaryActionButtonStyle}"
						VerticalOptions="End"
						Text="Save"
						Command="{Binding SaveItem}" />
				</StackLayout>

	</StackLayout>

	</ScrollView>
</ContentPage>



